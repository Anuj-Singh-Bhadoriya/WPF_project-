<UserControl x:Class="WpfApp1.View.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="818">
    <Grid Margin="45,45,60,79">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="450*"/>
            <ColumnDefinition Width="30"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />

        </Grid.RowDefinitions>
        <TextBlock Text="Employee Details" 
                   Grid.Row="0"
                   FontSize="20"
                   FontWeight = "Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,2" Grid.Column="1" Width="162"
                 
                   
                   />
        <TextBlock Text="Enter Id"
                   Grid.Row="1" 
                   Margin="13,11,13,12"
                   FontSize="14"
                   FontWeight="Bold"
                  
                   />
        <TextBlock Text="Enter Name" 
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="13,11,13,12"
                    FontSize="14"
                    FontWeight="Bold"
                   />
        <TextBlock 
            Text="Enter Password"
            Grid.Row="3"
            Grid.Column="0" Margin="13,11,13,11"
             FontSize="14"
            FontWeight="Bold"
                   />
        <TextBlock 
            Text="Enter Phone Number"
            Grid.Row="4"
            Grid.Column="0" Margin="13,12,13,11"
            FontSize="14"
            FontWeight="Bold"
                   />
        <TextBlock 
            Text="Enter Age" 
            Grid.Row="5"
            Grid.Column="0" Margin="13,12,13,11"
            FontSize="14"
            FontWeight="Bold"
                   />
        <TextBox 
            Name="txtEmpId" 
            Grid.Row="1"
            Grid.Column="1" Margin="35,7,30,7"

           
            />
        <TextBox 
            Name = "txtEmpName" 
            Grid.Row="2"
            Grid.Column="1" Margin="35,7,30,7"


            />
        <TextBox 
            Name="txtPhoneNum" 
            Grid.Row="3"
            Grid.Column="1" Margin="35,7,30,6"

/>
        <TextBox 
            Name = "txtPass" 
            Grid.Row="4"
            Grid.Column="1" Margin="35,7,30,7"

    
                 />
        <TextBox 
            Name="txtAge" 
            Grid.Row="5"
            Grid.Column="1" Margin="35,7,30,7"
                 />
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="5"
            Grid.Column="1" Margin="0,42,0,0" Grid.RowSpan="2"
            
            >
            <Button 
            Name="btnAdd"
           Content="ADD"
            FontSize="14"
            FontWeight="Bold"
            Width="80" Height="31"
            HorizontalAlignment="left" Margin="35,0,0,0"
            />
            <Button 
            Name="btnUpdate"
            Content="UPDATE"
             FontSize="14"
            FontWeight="Bold"
            Width="80" Height="31"
            HorizontalAlignment="left" Margin="5,0,0,0"
            />
            <Button 
                Name="btnDelete"
                Content="DELETE"
                 FontSize="14"
                FontWeight="Bold"
                Width="80" Height="31"
                HorizontalAlignment="left" Margin="5,0,0,0"
                />

        </StackPanel>

    </Grid>
</UserControl>
